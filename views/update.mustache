<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Update Task</title>
  </head>
  <body>
    {{#model}}
    <form class="" action="/edit/{{id}}" method="post">
      <input type="text" name="title" value="{{title}}">
      <input type="number" name="priority" value="{{priority}}">
      <input type="date" name="due_date" value="{{due}}">
      <input type="text" name="assignee" value="{{assignee}}">
      <input type="submit" name="" value="Add"><br>
    </form>
    {{/model}}
  </body>
</html>
